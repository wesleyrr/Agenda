<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/activity_detalhes_aluno"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:background="#00a8ec">

            <ImageView
                android:id="@+id/formulario_foto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/person"
                android:background="#02a9ec"/>

            <TextView
                android:id="@+id/detalhes_aluno_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:layout_margin="12dp"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 0,00"
                android:textSize="18sp"
                android:textColor="#0d0c0c"
                android:textStyle="bold"
                android:layout_margin="12dp"/>

            <RatingBar
                android:id="@+id/detalhes_aluno_nota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="10"
                android:numStars="5"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:theme="@style/RatingBar"
                android:layout_alignParentRight="true"
                android:layout_margin="12dp"
                android:rating="5"
                android:background="@color/cardview_shadow_end_color"
                android:backgroundTint="@color/yellowBackground"
                android:progressTint="@color/yellowBackground"
                android:secondaryProgressTint="@color/grayBackground"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout android:id="@+id/lyChk1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentLeft="true">
                <CheckBox
                    android:id="@+id/detalhes_aluno_ck4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exclusivo"
                    android:checked="true"
                    android:theme="@style/checkBoxComponent"
                    android:enabled="false"/>
                <CheckBox
                    android:id="@+id/detalhes_aluno_ck1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vaga coberta"
                    android:checked="false"
                    android:theme="@style/checkBoxComponent"
                    android:enabled="false"/>

                <CheckBox
                    android:id="@+id/detalhes_aluno_ck2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24 horas"
                    android:checked="true"
                    android:theme="@style/checkBoxComponent"
                    android:enabled="false"/>

                <CheckBox
                    android:id="@+id/detalhes_aluno_ck3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Possui câmera"
                    android:checked="true"
                    android:theme="@style/checkBoxComponent"
                    android:enabled="false"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true">
                <CheckBox
                    android:id="@+id/detalhes_aluno_ck5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atendente"
                    android:checked="true"
                    android:theme="@style/checkBoxComponent"
                    android:enabled="false"/>
                <CheckBox
                    android:id="@+id/detalhes_aluno_ck6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Portão automático"
                    android:checked="false"
                    android:theme="@style/checkBoxComponent"
                    android:enabled="false"/>

                <CheckBox
                    android:id="@+id/detalhes_aluno_ck7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vigia"
                    android:checked="true"
                    android:theme="@style/checkBoxComponent"
                    android:enabled="false"/>

                <CheckBox
                    android:id="@+id/detalhes_aluno_ck8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Código liberação"
                    android:checked="true"
                    android:theme="@style/checkBoxComponent"
                    android:enabled="false"/>

            </LinearLayout>

            <Button
                android:id="@+id/detalhes_aluno_btn_reservar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservar"
                android:backgroundTint="@color/greenBackground"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/detalhes_aluno_btn_cancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:backgroundTint="@color/grayBackground"
                android:textColor="#ffffff"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                />

        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>



